<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilePage">

    <ImageView
        android:id="@+id/ProfileImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#000" />
    <TextView
        android:id="@+id/ProfileTitle"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ali Veli" />
    <TextView
        android:id="@+id/Soyad"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ali Veli" />


    <TextView
        android:id="@+id/ProfileJob"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Software Developer" />

    <TextView
        android:id="@+id/ProfileText"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:text="About Me Here!!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/ProfileProjectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#037bfc"
            android:textColor="#fff"
            android:text="Projects Page" />

        <Button
            android:id="@+id/ProfileGrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00de1a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="Groups Page" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/ProfileMainPAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#037bfc"
            android:text="Main Page"
            android:textColor="#fff" />

        <Button
            android:id="@+id/ProfileSetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#de003f"
            android:text="Settings"
            android:textColor="#fff" />
    </LinearLayout>


    <Button
        android:id="@+id/logout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#de003f"
        android:textColor="#fff"
        android:onClick="logout"
        android:text="LogOut" />

</LinearLayout>