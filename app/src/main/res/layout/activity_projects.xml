<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Projects">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <ImageView
                android:id="@+id/project1img"
                android:layout_width="match_parent"

                android:layout_height="80dp" />

            <TextView
                android:id="@+id/project1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Project 1 Title"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project1Decs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:padding="10dp"
                android:text="Project 1 Description"
                android:textColor="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <!-- 2.proje -->
            <ImageView
                android:id="@+id/project2img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                  />

            <TextView
                android:id="@+id/project2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Project 2 Title"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project2Decs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:padding="10dp"
                android:text="Project2 Description"
                android:textColor="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <!-- 3.proje -->
            <ImageView
                android:id="@+id/project3img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                  />

            <TextView
                android:id="@+id/project3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Project 3 Title"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project3Decs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:padding="10dp"
                android:text="Project 3 Description"
                android:textColor="#000" />
            <!-- 4.Proje -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <ImageView
                android:id="@+id/project4img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/project4Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Project 4 Title"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project4Decs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:padding="10dp"
                android:text="Project 4 Description"
                android:textColor="#000" />



        </LinearLayout>




    </ScrollView>
</LinearLayout>