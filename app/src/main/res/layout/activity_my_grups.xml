<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MyGrups">

    <TextView
        android:id="@+id/MyGrupsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Your Grups" />

    <TextView
        android:id="@+id/MyGroupsDesc"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="In this side you access all  your groups" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#03fc0f"
            android:textColor="#fff"
            android:text="Profile" />


        <Button
            android:id="@+id/createGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0c2769"
            android:textColor="#fff"
            android:text="Create Group" />


    </LinearLayout>

    <Button
        android:id="@+id/allMyGroups"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#0b0542"
        android:textColor="#fff"
        android:text="All My Groups" />


</LinearLayout>