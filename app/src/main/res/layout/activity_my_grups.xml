<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MyGrups">

    <TextView
        android:id="@+id/MyGrupsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Your Grups" />

    <TextView
        android:id="@+id/MyGroupsDesc"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:text="In this side you access all  your groups" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#037bfc"
            android:textColor="#fff"
            android:text="Profile" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/GroupA"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="#037bfc"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Group A" />

            <Button
                android:id="@+id/GroupB"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="#037bfc"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Group B" />

            <Button
                android:id="@+id/GroupC"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="#037bfc"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Group C" />

            <Button
                android:id="@+id/GroupD"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="#037bfc"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Group D" />

            <Button
                android:id="@+id/GroupE"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="#037bfc"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Group E" />
        </LinearLayout>



    </ScrollView>






</LinearLayout>