<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewMember">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/AddMemer1Img"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/profile1" />

            <TextView
                android:id="@+id/AddMember1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:text="Ali Veli" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <ImageView
                android:id="@+id/AddMemer2Img"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:srcCompat="@drawable/profile2" />

            <TextView
                android:id="@+id/AddMember2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:textSize="22dp"
                android:textAlignment="center"
                android:text="Oya Yontar" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
        </LinearLayout>




    </ScrollView>




</LinearLayout>